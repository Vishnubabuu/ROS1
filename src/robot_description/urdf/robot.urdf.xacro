<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include Gazebo + transmissions -->
  <xacro:include filename="$(find robot_description)/urdf/robot_gazebo.xacro"/>

  <!-- Base -->
  <link name="base_footprint"/>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.04" rpy="0.0 0.25 0.3"/>
      <mass value="0.82573504"/>
      <inertia
        ixx="0.022124416" ixy="-0.000122941"
        ixz="0.000349387"
        iyy="0.021193702" iyz="-0.0000501209"
        izz="0.020064271"/>
    </inertial>

    <visual>
      <geometry>
        <mesh filename="package://robot_description/meshes/base_link.STL"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://robot_description/meshes/base_link.STL"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.033" rpy="0 0 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="wheel_right_link">
    <inertial>
      <mass value="0.053"/>
      <inertia ixx="1.88e-05" iyy="3.11e-05" izz="1.88e-05"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="package://robot_description/meshes/wheel_right_link.STL"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 -0.07 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="wheel_left_link">
    <inertial>
      <mass value="0.053"/>
      <inertia ixx="1.88e-05" iyy="3.11e-05" izz="1.88e-05"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="-1.57 0 0"/>
      <geometry>
        <mesh filename="package://robot_description/meshes/wheel_left_link.STL"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0 0.07 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- IMU -->
  <link name="imu_link"/>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.07" rpy="3.14159 0 0"/>
  </joint>

</robot>
